<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValueAnimatorObjectAnimator"
    android:background="@color/background_color"
    android:padding="15dp">

    <ImageView
        android:id="@+id/xiquiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xiquiz"
        android:layout_centerInParent="true"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/tvFuture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/we_are_going_into_the_future"
        android:layout_below="@+id/xiquiz"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <RatingBar
        android:id="@+id/rbStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFuture"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:rating="2"
        android:stepSize="1"
        android:isIndicator="true"
        />

</RelativeLayout>